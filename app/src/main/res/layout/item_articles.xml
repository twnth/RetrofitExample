<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/article_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/article_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="txt1"
        app:layout_constraintLeft_toRightOf="@+id/article_img"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/article_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="txt2"
            app:layout_constraintStart_toEndOf="@+id/article_img"
            app:layout_constraintTop_toBottomOf="@+id/article_txt1" />

        <TextView
            android:id="@+id/article_txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="txt3"
            app:layout_constraintStart_toEndOf="@+id/article_img"
            app:layout_constraintTop_toBottomOf="@+id/article_txt2" />

        <TextView
            android:id="@+id/article_txt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="txt4"
            app:layout_constraintStart_toEndOf="@+id/article_img"
            app:layout_constraintTop_toBottomOf="@+id/article_txt3" />

</android.support.constraint.ConstraintLayout>